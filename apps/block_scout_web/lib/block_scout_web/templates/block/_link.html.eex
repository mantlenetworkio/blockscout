<%= if @hideLabel == true do %>
 <%= link(
  to_string(@block.number),
  to: block_path(BlockScoutWeb.Endpoint, :show, @block.hash)
) %>
<% else %>
  <%= link(
  gettext("Block #%{number}", number: to_string(@block.number)),
  to: block_path(BlockScoutWeb.Endpoint, :show, @block.hash)
) %>
<% end %>
